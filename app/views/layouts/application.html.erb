<!DOCTYPE html>
<html>
  <head>
    <title>YourPrimarySource</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav>
      <div class="nav-list">

        <% if current_user %>
            <p><%= link_to "Profile", user_path(current_user)%></p>
            <p><%= link_to "Campaigns", candidates_path%></p>
            <p><%= link_to "Log Out", logout_path%></p>
        <% else %>
            <p><%= link_to "Sign Up", signup_path%></p>
            <p><%= link_to "Log In", login_path%></p>
        <% end %>
        <img src="https://files.slack.com/files-pri/T02MD9XTF-FMB95L6P3/your_primary_source_logo__1_.png" alt="">
      </div>
    </nav>

    <% flash.each do |name, msg|%>
      <%= content_tag :div, msg.html_safe%>
    <% end %>

    <%= yield %>
  </body>
</html>
