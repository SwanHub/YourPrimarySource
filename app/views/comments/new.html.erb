<h3>You are responding to <%=@user.full_name%>'s post:</h3>

<h1><%=@post.title%></h1>
<h1><%=@post.content%></h1>



<%= form_tag("/comments/create", method: "post") do %>
  <input type="hidden" name="post[id]" value="<%=post.id%>">
  <input type="text" name="comment[title]">
  <textarea name="comment[description]"></textarea>
  <button class="inputbutton" type="submit">
    Deliver Comment
  </button>
<% end %>
