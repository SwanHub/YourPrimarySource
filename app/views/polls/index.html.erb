<form action="/polls" method="get">
  <select class="policy_dropdown" name="policy[candidate_id]" id="candidate_id">
    <option selected disabled>Candidate</option>
    <%=@candidates.each do |candidate|%>
      <option value="<%=candidate.id%>"><%=candidate.name%></option>
    <% end%>
    <option></option>
  </select><br>
  <input class="policy_search" type="submit" name="commit" value="Search">
</form>

<% if @poll_sources %>
   <% @poll_sources.each do |source|%>
    <div class="policy_card">

      <div class="policy_item">
        <p><%= link_to policy.candidates.first.name, candidate_path(policy.candidates.first)%></p>
        <img class="policy_image" src="<%=policy.candidates.first.image%>" alt="<%=policy.candidates.first.name%>">
      </div>

      <div class="policy_item">
        <p class="description"><%= policy.description%></p>
      </div>
    </div>
  <% end%>
<% end %>
